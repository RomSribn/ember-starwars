<div class="card" style="width: 18rem;">
    {{#if @person}}
        <div class="card-header">
            {{@person.name}}
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Gender: {{@person.gender}}</li>
            <li class="list-group-item">Mass: {{@person.mass}}</li>
            <li class="list-group-item">Skin color: {{@person.skin_color}}</li>
        </ul>
        <div class="mt-3">
           {{#if @person.winner}}
              {{@person.name}} has won!
           {{/if}}   
        </div>
    {{/if}}
    {{#if @starship}}
        <div class="card-header">
            {{@starship.name}}
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Gender: {{@starship.model}}</li>
            <li class="list-group-item">Mass: {{@starship.crew}}</li>
            <li class="list-group-item">Skin color: {{@starship.manufacturer}}</li>
        </ul>
        <div class="mt-3">
            {{#if @starship.winner}}
                {{@starship.name}} has won!
            {{/if}}
        </div>
    {{/if}}
</div>